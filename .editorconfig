root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

# TypeScript & JavaScript
[*.{ts,js}]
quote_type = single

# JSON & YAML (Angular config files, translations, etc.)
[*.{json,yml,yaml}]
indent_size = 2

# HTML (Angular templates)
[*.html]
indent_size = 2

# SCSS & CSS
[*.{scss,css}]
indent_size = 2

# Markdown (docs, README, etc.)
[*.md]
trim_trailing_whitespace = false

# Git ignore files
[*.gitignore]
insert_final_newline = false
